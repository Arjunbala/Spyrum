<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage" >

    <ImageView 
        android:id="@+id/spider_logo"
        android:contentDescription="@string/spider_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/spider"
        android:background="@color/blue"
        />

    <TextView
        android:id="@+id/spider"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/spider_logo"
        android:gravity="center"
        android:text="@string/spyrum"
        android:textSize="@dimen/tsize" 
        android:background="@color/blue"
        android:textColor="@color/red"/>

</RelativeLayout>
